{% extends 'base.html.twig' %}

{% block body %}

    <h1>{{category.name}}</h1>


    <div class="container">
        <div class="row">
            <div class="col-12">
                {{category.description| raw}}
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">

            {% for post in posts %}

                <div class="col-12 col-md-4 col-lg-3">

                    <a href="{{ path("posts_single", {slug:post.slug}) }}">
                        {{post.title}}
                    </a>
                
                </div>
                
            {% endfor %}
            
            <div class="col-12">
                <a href="{{ path("categories_home") }}"> Retour</a>
            </div>

            <div class="col-12">
                <a href="{{ path("posts_home") }}"> Liste des publications </a>
            </div>

        </div>
    </div>


{% endblock %}
