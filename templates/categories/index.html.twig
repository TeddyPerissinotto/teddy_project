{% extends 'base.html.twig' %}

{% block body %}

    <h1>Liste des {{ page_name }}</h1>


    <div class="container">
        <div class="row">

            {% for category in categories %}

                <div class="col-12 col-md-4 col-lg-3">

                    <a href="{{ path("categories_single", {slug:category.slug}) }}">

                        <h4>{{ category.name }}</h4>
  
                    </a>

                </div>
                
            {% endfor %}
                
        </div>
    </div>

{% endblock %}
