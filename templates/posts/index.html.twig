{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">

                <h1>Liste des {{ page_name }}</h1>


                <div class="container">
                    <div class="row">

                        {% for post in posts %}

                            <div class="col-12 col-md-4 col-lg-3">

                                <a href="{{ path("posts_single", {slug:post.slug}) }}">

                                    <h4>{{ post.title }}</h4>
            
                                </a>

                            </div>
                            
                        {% endfor %}
                            
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
